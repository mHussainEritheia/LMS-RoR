<table>
        <%= form_with model: [:admin, @book] do |form| %>
            <tr>
                <td>
                  <%= form.label :name, "Enter Book Name" %>
                  <%= form.text_field :name %>
                </td>
            </tr>
            <tr>
                <td>
                  <%= form.label :author, "Enter Book Author Name" %>
               <%= form.text_field :author %>
                </td>
            </tr>
            <tr>
                <td>
                  <%= form.label :publication_year, "Select Book Publication Year" %>
                  <%= form.date_field :publication_year %>
                </td>
            </tr>
            <tr>
                <td>
                  <%= form.label :book_category_id, "Select Book Category" %>
                
                  <%= form.select :book_category_id, BookCategory.pluck(:name, :id)  %>
                </td>
            </tr>
            <tr>
              <td><%= form.submit %></td>
            </tr>
        <% end %>
    </table>
